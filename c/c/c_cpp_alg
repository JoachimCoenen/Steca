// (c) - include into a .cpp file; algorithms

#include "c_cpp_only.inc"

#ifdef C_CPP_ALG_INCLUDED
  #error inlude only once
#endif
#define C_CPP_ALG_INCLUDED

#ifdef __GNUC__

#define for_int(i, n)   \
  for (mut_typ<decltype(n)>::typ i = decltype(n)(0), i##End = (n); i < i##End; ++i)
#define for_int_down(n) \
  for (mut_typ<decltype(n)>::typ i = (num); i-- > decltype(n)(0); )

#else // msvc fails the above

#define for_int(i, n)   \
  for (int i = 0, i##End = (n); i < i##End; ++i)
#define for_int_down(n) \
  for (int i = (num); i-- > 0; )

#endif

#define for_i(n)        for_int (i, n)
#define for_i_down(n)   for_int_down (i, n)
#define for_ij(ni, nj)  for_int (i, ni) for_int (j, nj)

#define ONLY_ONCE \
{ static bool once = false; if (once) return; once = true; }

// eof
